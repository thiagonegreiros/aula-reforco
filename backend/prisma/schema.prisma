generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  STUDENT
  TEACHER
  ADMIN
}

model User {
  id         Int       @id @default(autoincrement())
  email      String    @unique
  password   String
  born_date  DateTime
  name       String
  role       Role      @default(STUDENT)
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  Student    Student[]

  @@map("user")
}

model Student {
  id                 Int      @id @default(autoincrement())
  name               String
  father_name        String
  mother_name        String
  responsible_number String
  student_name       String?
  class_time         DateTime
  qty_days_peer_week Int
  active             Boolean  @default(false)
  user_id            Int
  user               User     @relation(fields: [user_id], references: [id])
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("student")
}
