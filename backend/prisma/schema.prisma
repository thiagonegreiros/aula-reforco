generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  STUDENT
  TEACHER
  ADMIN
}

model User {
  id         Int       @id @default(autoincrement())
  email      String    @unique
  password   String
  born_date  DateTime
  name       String
  role       Role      @default(STUDENT)
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  Student    Student[]
  Notes      Notes[]
  Lesson     Lesson[]

  @@map("user")
}

model Student {
  id                 Int      @id @default(autoincrement())
  name               String
  father_name        String
  mother_name        String
  responsible_number String
  student_name       String?
  class_time         DateTime
  qty_days_peer_week Int
  active             Boolean  @default(false)
  id_user_student    Int
  user               User     @relation(fields: [id_user_student], references: [id])
  created_at         DateTime @default(now())
  updated_at         DateTime @updatedAt

  @@map("student")
}

model Subjects {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  Lesson      Lesson[]

  @@map("subjects")
}

model Notes {
  id            Int      @id @default(autoincrement())
  note          String
  id_user_notes Int
  user          User     @relation(fields: [id_user_notes], references: [id])
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  @@map("notes")
}

model Lesson {
  id                 Int      @id @default(autoincrement())
  title              String
  description        String
  id_user_lesson     Int
  id_subjects_lesson Int
  created_at         DateTime @default(now())
  updated_at         DateTime @updatedAt

  user     User     @relation(fields: [id_user_lesson], references: [id])
  subjects Subjects @relation(fields: [id_subjects_lesson], references: [id])

  @@map("lesson")
}
